        <script src="/public/js/jquery.easyui.min.js"></script>   
        <script type="text/javascript" src="/public/js/jquery/jquery.edatagrid.js"></script> 
        
        <script type="text/javascript">
		$(function(){
			$('#dg').edatagrid({
				url: 'get-company',
				saveUrl: 'save-company',
				updateUrl: 'update-company',
				destroyUrl: 'delete-company',
                                onError: function(index,row){
                                    alert(row.msg);
                                }, 
                                autoSave:false
			});
                        
		});
	</script>
</head>

<div class="row">
    <div class="col-lg-12">                   
        <h2 class="page-header">Shippers & Receivers</h2>
        <ol class="breadcrumb">                                  
            <li><a href="/inventory/create-order">Create Order</a></li>
